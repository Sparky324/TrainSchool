<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Math.Class7.Theme1.Var1.MathClass7Theme1Var1Task4Activity">

    <ru.noties.jlatexmath.JLatexMathView
        android:id="@+id/j_latex_math_view9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:background="@color/white"
        android:padding="16dip"
        app:jlmv_alignHorizontal="center"
        app:jlmv_alignVertical="center"
        app:jlmv_textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ru.noties.jlatexmath.JLatexMathView
        android:id="@+id/j_latex_math_view10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="2dp"
        android:background="@color/white"
        android:padding="16dip"
        app:jlmv_alignHorizontal="center"
        app:jlmv_alignVertical="center"
        app:jlmv_textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/j_latex_math_view9" />

    <ru.noties.jlatexmath.JLatexMathView
        android:id="@+id/j_latex_math_view11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:padding="16dip"
        app:jlmv_alignHorizontal="center"
        app:jlmv_alignVertical="center"
        app:jlmv_textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/j_latex_math_view10" />

    <EditText
        android:id="@+id/answer"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="101dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/j_latex_math_view11"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/saveAnswer"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="23dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="112dp"
        android:onClick="onAnswerClick"
        android:text="Ответить!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/next"
        app:layout_constraintStart_toEndOf="@+id/previous" />

    <ImageButton
        android:id="@+id/next"
        android:layout_width="52dp"
        android:layout_height="48dp"
        android:layout_marginStart="9dp"
        android:layout_marginEnd="81dp"
        android:layout_marginBottom="112dp"
        android:onClick="onNextClick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/saveAnswer"
        app:srcCompat="@drawable/right_arrow" />

    <ImageButton
        android:id="@+id/previous"
        android:layout_width="52dp"
        android:layout_height="48dp"
        android:layout_marginStart="79dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="112dp"
        android:onClick="onPrevClick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/saveAnswer"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/left_arrow" />

</androidx.constraintlayout.widget.ConstraintLayout>